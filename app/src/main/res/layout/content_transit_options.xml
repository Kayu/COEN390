<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elec390.ryanpoitras.intoxic_aid.MainActivity"
    tools:showIn="@layout/activity_main">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/PublicTransitLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:text="PUBLIC TRANSIT"
            android:id = "@+id/PublicTransitText"
            android:textSize="60dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center" />
        <Button
            android:id="@+id/TransitButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_y="150dp"
            android:textSize="13dp"
            android:textAlignment="center"
            android:clickable="true"
            android:background="@drawable/transit_options_button_design"
            android:textColor="#000000" />



    </AbsoluteLayout>

    <AbsoluteLayout
        android:id="@+id/WalkingLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/PublicTransitLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="WALKING"
            android:textSize="60dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/WalkingText" />

        <Button
            android:id="@+id/WalkingButton"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_y="100dp"
            android:text="Display Walking Time Here"
            android:clickable="true"
            android:background="@drawable/transit_options_button_design"
            android:textColor="#000000"/>
    </AbsoluteLayout>

</RelativeLayout>