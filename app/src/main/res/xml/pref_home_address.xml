<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- call the custom preference from the Model. The format is package.customPreferenceClassName -->
    <com.example.kayuho.coen390.Model.AddressEditTextPreference
        android:capitalize="words"
        android:defaultValue="Please Enter a Valid Address"
        android:inputType="textCapWords"
        android:key="set_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Your Address" />

    <com.example.kayuho.coen390.Model.DeleteAddressConfirmationPreference
        android:dialogMessage="Are you sure you want to delete the current address assigned to this app?"
        android:key="delete_address"
        android:defaultValue="Delete stored address"
        android:summary="Delete current address"
        android:title="Delete Address" />

</PreferenceScreen>

