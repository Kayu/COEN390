<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
    android:capitalize="words"
    android:defaultValue="Please Enter a Valid Address"
    android:inputType="textCapWords"
    android:key="set_address"
    android:maxLines="1"
    android:selectAllOnFocus="true"
    android:singleLine="true"
    android:title="Your Address" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="Which Contacts do you wish to Block?"
        android:key="Blocked_Contacts"
        android:inputType="textMultiLine"
        android:lines='5'
        android:maxLines='5'
        android:selectAllOnFocus="true"
        android:title="Blocked Contacts" />

</PreferenceScreen>